<section>
    <div class="card mt-4">
    <h3 class="card-header custom-card-header">Login</h3>
    <div class="card-body">
      <a id="lnkSignupLogin" href="/signup">Create a new account ?</a>
      <form>
        <div class="form-group mt-2">
          <label for="loginEmail">Email address</label>
          {{!-- Added value default for development --}}
          <input value="developer@simmons1.net" type="email" class="form-control" id="loginEmail" aria-describedby="emailHelp" placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group mt-3">
          <label for="loginPassword">Password</label>
          <input value="Password1234" type="password" class="form-control" id="loginPassword" placeholder="Password">
        </div>
        <button id="loginSubmit" type="submit" class="btn btn-primary mt-4">Submit</button>
      </form>
    </div>
</section>
<script src="/js/login.js"></script>