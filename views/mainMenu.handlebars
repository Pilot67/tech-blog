<section>
{{#if posts.length}}
  {{#if logged_in}}    
    {{#each posts as |post|}}
    <div class="card mt-4" data-idx="{{post.id}}">
      <h3 class="card-header custom-card-header">
        <a href = "api/posts/{{post.id}}">{{post.title}}</a>
      </h3>
      <div class="card-body">
        <p>{{post.content}}</p>
      </div>
      <div>
        <h5 class="card-header">Posted by {{post.user.name}} on {{formatDate post.date_created}}</h5>
      </div>

      {{#each post.comments as |comment|}}
      <p>{{comment.comment_text}}</p>
      {{/each}}

    </div>
    {{/each}}
  {{else}}
    {{#each posts as |post|}}
      <div class="card mt-4">
      <h3 class="card-header custom-card-header">{{post.title}}</h3>
      <div class="card-body">
        <p>{{post.content}}</p>
      </div>
      </div>
    {{/each}}
  {{/if}}
{{/if}}
</section>
<script src="/js/blogs.js"></script>