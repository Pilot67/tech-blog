<section>
{{#if posts.length}}
  {{#if logged_in}}    
    {{#each posts as |post|}}
    <div class="card mt-4" data-idx="{{post.id}}">
      <div class="card-header custom-card-header">
        <h3><a href = "api/posts/{{post.id}}">{{post.title}}</a></h3>
        <h5>Posted by {{post.user.name}} on {{formatDate post.date_created}}</h5>
      </div>
      <div class="card-body">
        <p>{{post.content}}</p>
      </div>
</div>
      {{#each post.comments as |comment|}}
        <div class="card mt-2">
            <div class="card-body">
                <p>{{comment.comment_text}}</p>
                <p class="custom-left-padding"> Posted by {{comment.user.name}}   -    {{formatDate comment.date_created}}</p>
            </div>
        </div>
      {{/each}}

    
    {{/each}}
  {{else}}
    {{#each posts as |post|}}
      <div class="card mt-4">
      <h3 class="card-header custom-card-header">{{post.title}}</h3>
      <div class="card-body">
        <p>{{post.content}}</p>
      </div>
      </div>
    {{/each}}
  {{/if}}
{{/if}}
</section>